{
  "name": "black-box",
  "displayName": "Black Box",
  "description": "Real-time development logger and problem solver",
  "publisher": "nikhilmjeby",
  "version": "0.0.2",
  "icon": "./logo_128x128.png",
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onCommand:black-box.openLiveDoc",
    "onCommand:black-box.refreshLiveDoc"
  ],
  "main": "./extension.js",
  "extensionDependencies": [
    "vscode.git"
  ],
  "contributes": {
    "commands": [
      {
        "command": "black-box.openLiveDoc",
        "category": "BlackBox",
        "title": "Open Live Documentation"
      }
    ],
    "keybindings": [
      {
        "command": "black-box.openLiveDoc",
        "key": "ctrl+m",
        "mac": "cmd+m"
      },
      {
        "command": "black-box.refreshLiveDoc",
        "key": "alt+m",
        "mac": "alt+m"
      }
    ],
    "configuration": {
      "title": "Black Box",
      "type": "object",
      "properties": {
        "black-box.OPENAI_API_KEY": {
          "type": "string",
          "default": "",
          "description": "OPENAI codex API key"
        },
        "black-box.SLACK_SOCKET_TOKEN": {
          "type": "string",
          "default": "",
          "description": "Slack App Level Token (looks like => xapp-...)"
        },
        "black-box.SLACK_TOKEN": {
          "type": "string",
          "default": "",
          "description": "Slack Bot User OAuth Token (looks like => xoxb-...)"
        },
        "black-box.SLACK_USER_NAME": {
          "type": "string",
          "default": "",
          "description": "Slack Bot User Name for messages sent by you"
        },
        "black-box.START_AUTO": {
          "type": "boolean",
          "default": true,
          "description": "Start Black Box automatically on vscode startup"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@slack/web-api": "^6.5.1",
    "node-fetch": "^2.6.6",
    "websocket": "^1.0.34"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/solid-droid/Black-Box.git"
  }
}
